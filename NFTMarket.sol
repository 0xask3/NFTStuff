contract Marketplace is Ownable {
    struct Order {
        IERC721 nftContract;
        uint256 tokenId;
        address orderCreator;
        uint256 price;
    }

    mapping(uint256 => Order) public orders;
    mapping(address => mapping(uint256 => uint256)) public nftToOrderId;
    mapping(address => bool) public isSupportedToken;

    IUniswapV2Router02 internal router =
        IUniswapV2Router02(0xa5E0829CaCEd8fFDD4De3c43696c57F7D7A678ff); //Quickswap mainnet router

    uint256 public totalOrders;
    mapping(address => bool) public isNotAllowed;
    uint256 public feePercent = 50; //5% fee

    event OrderCreated(address nftContract, uint256 tokenId, uint256 orderId);
    event OrderProcessed(
        uint256 orderId,
        address buyer,
        address contractAdd,
        uint256 tokenId,
        uint256 price
    );

    constructor() {
        isSupportedToken[address(0x0)] = true; //Matic purchase
    }

    function listMultiple(
        address _contractAdd,
        uint256[] memory _tokenIds,
        uint256 _price
    ) external {
        for (uint16 i = 0; i < _tokenIds.length; i++) {
            list(_contractAdd, _tokenIds[i], _price);
        }
    }

    function delistWithContractAddress(address _contractAdd, uint256 _id)
        external
    {
        uint256 id = nftToOrderId[_contractAdd][_id];
        require(id != 0, "Invalid order");
        deListWithOrderId(id);
    }

    function setSupportedToken(address token, bool value) external onlyOwner {
        isSupportedToken[token] = value;
    }

    function setIsNotAllowed(address _contractAdd, bool status)
        external
        onlyOwner
    {
        isNotAllowed[_contractAdd] = status;
    }

    function buyWithContractAddress(
        address _token,
        address _contractAdd,
        uint256 _id
    ) external payable {
        uint256 id = nftToOrderId[_contractAdd][_id];
        buyWithOrderId(id, _token);
    }

    function list(
        address _contractAdd,
        uint256 _tokenId,
        uint256 _price
    ) public {
        IERC721 nftAdd = IERC721(_contractAdd);
        nftAdd.transferFrom(msg.sender, address(this), _tokenId);

        orders[totalOrders].nftContract = nftAdd;
        orders[totalOrders].tokenId = _tokenId;
        orders[totalOrders].orderCreator = msg.sender;
        orders[totalOrders].price = _price;

        nftToOrderId[_contractAdd][_tokenId] = totalOrders;
        emit OrderCreated(_contractAdd, _tokenId, totalOrders);

        totalOrders++;
    }

    function deListWithOrderId(uint256 _orderId) public {
        require(msg.sender == orders[_orderId].orderCreator, "Not allowed");

        IERC721 nftAdd = IERC721(orders[_orderId].nftContract);
        nftAdd.transferFrom(
            address(this),
            msg.sender,
            orders[_orderId].tokenId
        );

        delete nftToOrderId[address(nftAdd)][orders[_orderId].tokenId];
        delete orders[_orderId];
    }

    function buyWithOrderId(uint256 _orderId, address _token) public payable {
        Order memory order = orders[_orderId];
        IERC721 nftAdd = IERC721(order.nftContract);

        require(address(order.nftContract) != address(0), "Invalid order Id");
        require(isSupportedToken[_token], "Token not supported");
        require(!isNotAllowed[address(nftAdd)], "Not alllowed to buy this NFT");

        uint256 amount;

        if (_token != address(0x0)) {
            amount = getPriceInToken(order.price, _token);
            require(
                IERC20(_token).allowance(msg.sender, address(this)) >= amount,
                "Not enough allowance"
            );
            IERC20(_token).transferFrom(msg.sender, address(this), amount);
            uint256 feeAmount = (amount * feePercent) / 1000;

            IERC20(_token).transfer(owner(), feeAmount);
            IERC20(_token).transfer(order.orderCreator, amount - feeAmount);
        } else {
            amount = msg.value;
            require(amount >= order.price, "Not enough Matic to buy");

            uint256 feeAmount = (amount * feePercent) / 1000;
            payable(owner()).transfer(feeAmount);
            payable(order.orderCreator).transfer(msg.value - feeAmount);
        }

        nftAdd.transferFrom(address(this), msg.sender, order.tokenId);

        emit OrderProcessed(
            _orderId,
            msg.sender,
            address(order.nftContract),
            order.tokenId,
            amount
        );

        delete orders[_orderId];
        delete nftToOrderId[address(nftAdd)][orders[_orderId].tokenId];
    }

    function getPriceInToken(uint256 amount, address token)
        internal
        view
        returns (uint256 price)
    {
        address[] memory path = new address[](2);
        path[0] = router.WETH();
        path[1] = token;

        uint256[] memory output = router.getAmountsOut(amount, path);
        return output[output.length - 1];
    }
}
